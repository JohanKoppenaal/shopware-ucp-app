# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# App Secret (used for Shopware registration signing)
APP_SECRET=your-app-secret-here-min-32-chars

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/ucp_app?schema=public"

# Redis (for caching and job queues)
REDIS_URL="redis://localhost:6379"

# Shopware Configuration
SHOPWARE_DEFAULT_TIMEOUT=30000

# UCP Server Configuration
UCP_SERVER_URL=https://ucp-app.example.com
UCP_VERSION=2026-01-11

# Signing Keys (auto-generated if not provided)
# SIGNING_PRIVATE_KEY=
# SIGNING_PUBLIC_KEY=

# Payment Handler Configuration
GOOGLE_PAY_ENVIRONMENT=TEST
GOOGLE_PAY_MERCHANT_ID=your-merchant-id
GOOGLE_PAY_MERCHANT_NAME="Your Store Name"

# PSP Configuration (choose one)
PSP_TYPE=mollie
MOLLIE_API_KEY=test_xxx
# ADYEN_API_KEY=xxx
# ADYEN_MERCHANT_ACCOUNT=xxx
# STRIPE_SECRET_KEY=sk_test_xxx

# Logging
LOG_LEVEL=info

# Error Tracking (optional)
# SENTRY_DSN=https://xxx@sentry.io/xxx
